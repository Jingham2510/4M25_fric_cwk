<?xml version="1.0" encoding="UTF-8"?>




<!-- Robot definition -->
<robot name = "IRB_6400">

    <!-- Orange Colour Definition-->
    <material name="ABB_Orange">
        <color rgba ="0.96 0.47 0.156 1"/>    
    </material>


    <!-- Intertia macro definition (src: https://github.com/HumaRobotics/mybot_gazebo_tutorial/blob/master/mybot_description/urdf/macros.xacro) -->

    <macro name="cylinder_inertia" params="m r h">
        <inertia  ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
                  iyy="${m*(3*r*r+h*h)/12}" iyz = "0"
                  izz="${m*r*r/2}" /> 
      </macro>

      <macro name="box_inertia" params="m x y z">
        <inertia  ixx="${m*(y*y+z*z)/12}" ixy = "0" ixz = "0"
                  iyy="${m*(x*x+z*z)/12}" iyz = "0"
                  izz="${m*(x*x+z*z)/12}" /> 
      </macro>


    <!--Link descriptions -->
    <link name ="base">
        <visual>
            <geometry>
                <cylinder length="0.14" radius="0.76"/>
            </geometry>
            <material name="ABB_Orange"/>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.14" radius="0.76"/>
            </geometry>
        </collision>


        <intertial>
            <mass value="100"/>
            <cylinder_inertia m="100" r="0.14" h="0.76"/>
        </intertial>

    </link>


    <link name = "link_1">
        <visual>
            <geometry>
                <box size="0.2 0.2 0.8"/>
            </geometry>            
            <material name="ABB_Orange"/>
        </visual>
    
        <collision>
            <geometry>
                <box size="0.2 0.2 0.8"/>
            </geometry>
        </collision>

        <intertial>
            <mass value="1"/>
            <box_inertia m="1" x="0.2" y="0.2" z ="0.8"/>
        </intertial>


    </link>


    <link name = "link_2">
        <visual>
            <geometry>
                <box size="0.2 0.2 1.05"/>
            </geometry>            
            <material name="ABB_Orange"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.2 1.05"/>
            </geometry>
        </collision>

        <intertial>
            <mass value="1"/>
            <box_inertia m="1" x="0.2" y="0.2" z ="1.05"/>
        </intertial>

    </link>

    <link name = "link_3">
        <visual>
            <geometry>
                <box size="0.4 0.1 0.2"/>
            </geometry>            
            <material name="ABB_Orange"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.4 0.1 0.2"/>
            </geometry>
        </collision>

        <intertial>
            <mass value="1"/>
            <box_inertia m="1" x="0.4" y="0.1" z ="0.2"/>
        </intertial>


    </link>

    <link name = "link_4">
        <visual>
            <geometry>
                <cylinder length = "1.725" radius = "0.1"/>
            </geometry>            
            <material name="ABB_Orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length = "1.725" radius = "0.1"/>
            </geometry>
        </collision>

        <intertial>
            <mass value="1"/>
            <cylinder_inertia m="1" r="0.1" h="1.725"/>
        </intertial>

    </link>

    <link name = "link_5">
        <visual>
            <geometry>
                <cylinder length = "0.2" radius = "0.1"/>
            </geometry>            
            <material name="ABB_Orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length = "0.2" radius = "0.1"/>
            </geometry>
        </collision>

        <intertial>
            <mass value="1"/>
            <cylinder_inertia m="1" r="0.1" h="0.2"/>
        </intertial>


    </link>


    <link name = "link_6">
        <visual>
            <geometry>
                <cylinder length = "0.2" radius = "0.1"/>
            </geometry>            
            <material name="ABB_Orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length = "0.2" radius = "0.1"/>
            </geometry>
        </collision>

        <intertial>
            <mass value="1"/>
            <cylinder_inertia m="1" r="0.1" h="0.2"/>
        </intertial>

    </link>
    

    <!--Joint Descriptions-->
    <joint name = "joint_1" type ="revolute">        
        <parent link = "base"/>
        <child link = "link_1"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper = "6.28" velocity="0.5"/>
        <origin rpy="0 0 0" xyz = "0.24 0 0.4"/>
    </joint>

    <joint name = "joint_2" type ="revolute">        
        <parent link = "link_1"/>
        <child link = "link_2"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="0.0" upper = "6.28" velocity="0.5"/>
        <origin rpy="0 0 0" xyz = "0 0 0.525"/>
    </joint>

    <joint name = "joint_3" type ="revolute">        
        <parent link = "link_2"/>
        <child link = "link_3"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="0.0" upper = "6.28" velocity="0.5"/>
        <origin rpy="0 0 0" xyz = "-0.2 0 0.625"/>
    </joint>

    <joint name = "joint_4" type ="revolute">        
        <parent link = "link_3"/>
        <child link = "link_4"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0.0" upper = "6.28" velocity="0.5"/>
        <origin rpy="0 1.57 0" xyz = "1.0625 0 0"/>
    </joint>

    <joint name = "joint_5" type ="revolute">        
        <parent link = "link_4"/>
        <child link = "link_5"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="0.0" upper = "6.28" velocity="0.5"/>
        <origin rpy="1.57 0 0" xyz = "0 0 0.8625"/>
    </joint>

    <joint name = "joint_6" type ="revolute">        
        <parent link = "link_5"/>
        <child link = "link_6"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0.0" upper = "6.28" velocity="0.5"/>
        <origin rpy="1.57 0 0" xyz = "0 0 0"/>
    </joint>


</robot>